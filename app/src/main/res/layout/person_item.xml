<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="179dp"
    android:layout_height="250dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="32dp"
    android:orientation="horizontal"
    app:cardCornerRadius="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_person_item">


        <TextView
            android:id="@+id/first_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:layout_marginTop="19dp"
            android:layout_marginStart="19dp"
            android:fontFamily="@font/aqum_small_caps"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginLeft="19dp" />

        <TextView
            android:id="@+id/second_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="19dp"
            android:textColor="@color/white"
            android:fontFamily="@font/aqum_small_caps"
            android:text="Фамилия"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/age_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="19dp"
            android:textColor="@color/white"
            android:fontFamily="@font/aqum_small_caps"
            android:text="Возраст"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/work_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="19dp"
            android:textColor="@color/white"
            android:fontFamily="@font/aqum_small_caps"
            android:text="Загруженность"
            android:textSize="19sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>